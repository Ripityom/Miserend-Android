<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mass_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/church_thumb"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_alignParentLeft="true"
        app:failureImage="@drawable/church_blurred"
        app:failureImageScaleType="centerCrop"
        app:roundedCornerRadius="4dp" />


    <TextView
        android:id="@+id/church_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/church_thumb"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/black_40"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/mass_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/church_thumb"
        android:fontFamily="sans-serif-thin"
        android:textColor="@color/black_80"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/church_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/church_distance_bg_dark"
        android:textColor="@color/white" />

</RelativeLayout>